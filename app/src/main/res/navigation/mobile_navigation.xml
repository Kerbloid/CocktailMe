<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/cocktails">

    <fragment
        android:id="@+id/cocktails"
        android:name="com.example.cocktailme.presentation.ui.home.HomeCocktailsFragment"
        android:label="@string/title_cocktails"
        tools:layout="@layout/fragment_cocktails_home" >
        <action
            android:id="@+id/action_cocktails_to_navigation_cocktail_info"
            app:destination="@id/navigation_cocktail_info"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.cocktailme.presentation.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.cocktailme.presentation.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_cocktail_info"
        android:name="com.example.cocktailme.presentation.ui.cocktailInfo.CocktailInfoFragment"
        android:label="@string/title_cocktails"
        tools:layout="@layout/fragment_cocktail_info">
        <argument
            android:name="id"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="null" />
        <action
            android:id="@+id/action_navigation_cocktail_info_to_cocktails"
            app:popUpTo="@id/cocktails" />
    </fragment>
</navigation>